rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages access to user profile information.
     * @path /users/{userId}
     * @allow (create) User with UID 'user123' can create their profile if request.auth.uid == 'user123'.
     * @allow (get) User with UID 'user123' can read their profile if request.auth.uid == 'user123'.
     * @allow (update) User with UID 'user123' can update their profile if request.auth.uid == 'user123' and the document exists.
     * @allow (delete) User with UID 'user123' can delete their profile if request.auth.uid == 'user123' and the document exists.
     * @deny (create) User with UID 'user456' cannot create a profile for 'user123'.
     * @deny (get) User with UID 'user456' cannot read the profile of 'user123'.
     * @deny (update) User with UID 'user456' cannot update the profile of 'user123'.
     * @deny (delete) User with UID 'user456' cannot delete the profile of 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      // Helper function to check if the user is signed in.
      function isSignedIn() {
        return request.auth != null;
      }

      // Helper function to check if the user is the owner of the document.
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Helper function to check if the user is the owner of the existing document.
      function isExistingOwner(userId) {
          return isOwner(userId) && exists(resource);
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to team member profiles.
     * @path /team/{userId}
     * @allow (get) Any user can read team member profiles.
     * @deny (create) No user can create team member profiles through the client.
     * @deny (update) No user can update team member profiles through the client.
     * @deny (delete) No user can delete team member profiles through the client.
     * @principle Public read access with restricted write access.
     */
    match /team/{userId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to chat sessions.
     * @path /chats/{chatId}
     * @allow (create) A user can create a chat if they are a participant.
     * @allow (get) A user can read a chat if they are a participant.
     * @allow (update) A user can update a chat if they are a participant.
     * @allow (delete) A user can delete a chat if they are a participant.
     * @deny (create) A user cannot create a chat if they are not a participant.
     * @deny (get) A user cannot read a chat if they are not a participant.
     * @deny (update) A user cannot update a chat if they are not a participant.
     * @deny (delete) A user cannot delete a chat if they are not a participant.
     * @principle Enforces shared access based on the 'participants' map.
     */
    match /chats/{chatId} {

      // Helper function to check if the user is a participant in the chat.
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }

      // Helper function to check if the user is a participant in the chat (including new documents).
      function isNewParticipant() {
        return request.auth.uid in request.resource.data.participants;
      }

      allow get: if isParticipant();
      allow list: if false;
      allow create: if isSignedIn() && isNewParticipant();
      allow update: if isParticipant();
      allow delete: if false;
    }

    /**
     * @description Manages access to messages within a chat session.
     * @path /chats/{chatId}/messages/{messageId}
     * @allow (create) A user can create a message if they are a participant in the chat.
     * @allow (get) A user can read a message if they are a participant in the chat.
     * @allow (update) A user can update a message if they are a participant in the chat and the document exists.
     * @allow (delete) A user can delete a message if they are a participant in the chat and the document exists.
     * @deny (create) A user cannot create a message if they are not a participant in the chat.
     * @deny (get) A user cannot read a message if they are not a participant in the chat.
     * @deny (update) A user cannot update a message if they are not a participant in the chat.
     * @deny (delete) A user cannot delete a message if they are not a participant in the chat.
     * @principle Enforces shared access based on the parent chat's 'participants' map.
     */
    match /chats/{chatId}/messages/{messageId} {

      // Helper function to check if the user is a participant in the parent chat.
      function isParticipant() {
        return request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }

      allow get: if isParticipant();
      allow list: if false;
      allow create: if isSignedIn() && isParticipant();
      allow update: if isParticipant() && exists(resource);
      allow delete: if false;
    }

    /**
     * @description Manages access to contact information for a user.
     * @path /users/{userId}/contacts/{contactId}
     * @allow (create) User with UID 'user123' can create a contact if request.auth.uid == 'user123'.
     * @allow (get) User with UID 'user123' can read their contact if request.auth.uid == 'user123'.
     * @allow (update) User with UID 'user123' can update their contact if request.auth.uid == 'user123' and the document exists.
     * @allow (delete) User with UID 'user123' can delete their contact if request.auth.uid == 'user123' and the document exists.
     * @deny (create) User with UID 'user456' cannot create a contact for 'user123'.
     * @deny (get) User with UID 'user456' cannot read the contact of 'user123'.
     * @deny (update) User with UID 'user456' cannot update the contact of 'user123'.
     * @deny (delete) User with UID 'user456' cannot delete the contact of 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/contacts/{contactId} {
      // Helper function to check if the user is the owner of the document.
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      // Helper function to check if the user is the owner of the existing document.
      function isExistingOwner(userId) {
          return isOwner(userId) && exists(resource);
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages access to group chat information.
     * @path /groups/{groupId}
     * @allow (create) A user can create a group if they are the owner and a participant.
     * @allow (get) A user can read a group if they are a participant.
     * @allow (update) A user can update a group if they are a participant and the document exists.
     * @allow (delete) A user can delete a group if they are the owner and the document exists.
     * @deny (create) A user cannot create a group if they are not a participant.
     * @deny (get) A user cannot read a group if they are not a participant.
     * @deny (update) A user cannot update a group if they are not a participant.
     * @deny (delete) A user cannot delete a group if they are not the owner.
     * @principle Enforces shared access based on the 'participants' map, with owner privileges for deletion.
     */
    match /groups/{groupId} {

      // Helper function to check if the user is a participant in the group.
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }

        // Helper function to check if the user is a new participant in the group.
      function isNewParticipant() {
        return request.auth.uid in request.resource.data.participants;
      }

      // Helper function to check if the user is the owner of the group.
      function isOwner() {
        return resource.data.ownerId == request.auth.uid;
      }

      // Helper function to check if the user is the owner of the group AND the document exists.
      function isExistingOwner() {
          return resource.data.ownerId == request.auth.uid && exists(resource);
      }

      allow get: if isParticipant();
      allow list: if false;
      allow create: if isSignedIn() && isNewParticipant();
      allow update: if isParticipant();
      allow delete: if isExistingOwner();
    }

    /**
     * @description Manages access to messages within a group chat session.
     * @path /groups/{groupId}/messages/{messageId}
     * @allow (create) A user can create a message if they are a participant in the group.
     * @allow (get) A user can read a message if they are a participant in the group.
     * @allow (update) A user can update a message if they are a participant in the group and the document exists.
     * @allow (delete) A user can delete a message if they are a participant in the group and the document exists.
     * @deny (create) A user cannot create a message if they are not a participant in the group.
     * @deny (get) A user cannot read a message if they are not a participant in the group.
     * @deny (update) A user cannot update a message if they are not a participant in the group.
     * @deny (delete) A user cannot delete a message if they are not a participant in the group.
     * @principle Enforces shared access based on the parent group's 'participants' map.
     */
    match /groups/{groupId}/messages/{messageId} {

      // Helper function to check if the user is a participant in the parent group.
      function isParticipant() {
        return request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.participants;
      }

      allow get: if isParticipant();
      allow list: if false;
      allow create: if isSignedIn() && isParticipant();
      allow update: if isParticipant() && exists(resource);
      allow delete: if false;
    }

       /**
     * @description Manages access to team member profiles.
     * @path /admin/team
     * @allow (get) Any user can read team member profiles.
     * @deny (create) No user can create team member profiles through the client.
     * @deny (update) No user can update team member profiles through the client.
     * @deny (delete) No user can delete team member profiles through the client.
     * @principle Public read access with restricted write access.
     */
    match /admin/team {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}