rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Any authenticated user can read a user's profile, but only the user can write to it.
    // Listing all users is disallowed.
    match /users/{userId} {
      allow get: if request.auth != null;
      allow write: if request.auth.uid == userId;
      allow list: if false; // Prevent listing all users
    }

    // A user can only read and write to their own contacts subcollection.
    match /users/{userId}/contacts/{contactId} {
       allow read, write: if request.auth.uid == userId;
    }

    // A user can read or write to a chat document if their UID is in the participants map.
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.participants;
    }
    
    // A user can read or write messages in a chat if their UID is in the parent chat's participants map.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if get(/databases/$(database)/documents/chats/$(chatId)).data.participants[request.auth.uid] == true;
    }
  }
}
