/**
 * @fileoverview Firestore Security Rules for Secure Talk application.
 *
 * Core Philosophy:
 * This ruleset prioritizes user data ownership and shared access for chats.
 * Users have full control over their profile and contact data.
 * Chats are accessible to participating users only.
 * Admin-level write permissions are not defined.
 *
 * Data Structure:
 * - /users/{userId}: User profile information, owned by the user.
 * - /usernames/{username}: Stores reserved usernames, writeable only on creation, only by the new user.
 * - /team/{teamMemberId}: Team member profiles, publicly readable.
 * - /chats/{chatId}: Chat session information, accessible to participants.
 * - /chats/{chatId}/messages/{messageId}: Messages within a chat, accessible to chat participants.
 * - /users/{userId}/contacts/{contactId}: User's contact list, owned by the user.
 * - /groups/{groupId}: Group chat information, accessible to group members.
 * - /groups/{groupId}/messages/{messageId}: Group chat messages, accessible to group members.
 *
 * Key Security Decisions:
 * - User listing is implicitly disallowed, as there are no read-all rules on the /users collection.
 * - Public read access is granted to /team/{teamMemberId} for showcasing team members.
 * - The default security posture is strict; any access not explicitly allowed is denied.
 * - No timestamp validation is performed.
 *
 * Denormalization for Authorization:
 * - Chats: The `participants` map on the `/chats/{chatId}` document is used to efficiently check user access to the chat and its messages.
 * - Groups: The `participants` map on the `/groups/{groupId}` document is used to efficiently check user access to the group and its messages. The `ownerId` field is used for admin operations like update and delete.
 *
 * Structural Segregation:
 * - User profile data is stored under the `/users/{userId}` collection, ensuring private user data is separate from public data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) User 'user_abc' can create their own profile.
     * @allow (get, update, delete) User 'user_abc' can read, update, and delete their own profile.
     * @deny (get, list, create, update, delete) User 'user_xyz' cannot access 'user_abc' profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages unique usernames. Only the user creating the username can write to it, and only on creation.
     * @path /usernames/{username}
     * @allow (create) User 'user_abc' can create a username document if the 'uid' field matches their UID.
     * @deny (get, list, update, delete) No one can read, list, update, or delete username documents after creation.
     * @principle Prevents username squatting and ensures username ownership.
     */
    match /usernames/{username} {
      allow get: if false;
      allow list: if false;
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to team member profiles.
     * @path /team/{teamMemberId}
     * @allow (get, list) Anyone can read team member profiles.
     * @deny (create, update, delete) Only admins can create, update, or delete team member profiles.
     * @principle Allows public access to team member information while restricting write access.
     */
    match /team/{teamMemberId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation if needed.
    }

    /**
     * @description Controls access to chat session information.
     * @path /chats/{chatId}
     * @allow (get, list) Any participant in the chat can read the chat data.
     * @allow (create) Any user can create a chat if they are a participant.
     * @allow (update) Only participants in the chat can update typing status.
     * @allow (delete) No user can delete a chat.
     * @principle Enforces shared access to chats based on the participants list.
     */
    match /chats/{chatId} {
      allow get: if request.auth.uid in resource.data.participants;
      allow list: if false;
      allow create: if request.auth.uid in request.resource.data.participants;
      allow update: if request.auth.uid in resource.data.participants;
      allow delete: if false;
    }

    /**
     * @description Controls access to messages within a chat session.
     * @path /chats/{chatId}/messages/{messageId}
     * @allow (get, list) Any participant in the chat can read the messages.
     * @allow (create) Any participant in the chat can create a message.
     * @deny (update, delete) No user can update or delete messages.
     * @principle Enforces shared access to messages based on chat participation.
     */
    match /chats/{chatId}/messages/{messageId} {
      allow get, list: if get(/databases/$(database)/documents/chats/$(chatId)).data.participants[request.auth.uid] == true;
      allow create: if get(/databases/$(database)/documents/chats/$(chatId)).data.participants[request.auth.uid] == true;
      allow update, delete: if false;
    }

    /**
     * @description Controls access to user contact lists.
     * @path /users/{userId}/contacts/{contactId}
     * @allow (get, list, create, update, delete) The user can manage their own contacts.
     * @deny (get, list, create, update, delete) Other users cannot access this user's contacts.
     * @principle Enforces document ownership for contact management.
     */
    match /users/{userId}/contacts/{contactId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

     /**
      * @description Controls access to group chat information.
      * @path /groups/{groupId}
      * @allow (get, list) Any participant in the group can read the group data.
      * @allow (create) Any user can create a group if they are the owner and a participant.
      * @allow (update) Only the owner of the group can update group details.
      * @allow (delete) Only the owner can delete a group.
      * @principle Enforces shared access to groups based on the participants list and owner ID.
      */
    match /groups/{groupId} {
      allow get: if request.auth.uid in resource.data.participants;
      allow list: if false;
      allow create: if isOwner(resource.data.ownerId) && (request.auth.uid in request.resource.data.participants);
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    /**
     * @description Controls access to messages within a group chat session.
     * @path /groups/{groupId}/messages/{messageId}
     * @allow (get, list) Any participant in the group can read the messages.
     * @allow (create) Any participant in the group can create a message.
     * @deny (update, delete) No user can update or delete messages.
     * @principle Enforces shared access to group messages based on group participation.
     */
    match /groups/{groupId}/messages/{messageId} {
      allow get, list: if get(/databases/$(database)/documents/groups/$(groupId)).data.participants[request.auth.uid] == true;
      allow create: if get(/databases/$(database)/documents/groups/$(groupId)).data.participants[request.auth.uid] == true;
      allow update, delete: if false;
    }

        /**
     * @description Controls access to the /admin/team page.
     * @path /admin/team
     * @allow (get, list) No restrictions
     * @deny (create, update, delete) Only admins can create, update, or delete team member profiles.
     * @principle Allows public access to team member information while restricting write access.
     */
        match /admin/team {
            allow get, list: if false; // TODO: Add admin validation if needed.
            allow create, update, delete: if false; // TODO: Add admin validation if needed.
      }


    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
  }
}