/**
 * @fileoverview Firestore Security Rules for Secure Talk application.
 *
 * Core Philosophy:
 * This ruleset enforces a combination of user-ownership and shared access patterns.
 * User data is generally protected under the /users/{userId} path, requiring authentication
 * and ownership validation for write operations. Chats are protected by shared access,
 * where any participant can read and write.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles.
 * - /chats/{chatId}: Stores metadata for 1-on-1 chats.
 * - /chats/{chatId}/messages/{messageId}: Stores messages within 1-on-1 chats.
 * - /users/{userId}/contacts/{contactId}: Stores a user's contacts.
 * - /groups/{groupId}: Stores group chat metadata.
 * - /groups/{groupId}/messages/{messageId}: Stores messages within group chats.
 *
 * Key Security Decisions:
 * - Users can only read/write their own profile data.
 * - Chats are accessible to all participants.
 * - Group chats are accessible to all participants, with owner-only updates for group metadata.
 * - Listing of user documents is disallowed to prevent data enumeration.
 *
 * Denormalization for Authorization:
 * - The `Chat` and `Group` documents contain a `participants` map that is used to authorize
 *   read and write access to the chat and its messages.  This avoids costly `get()` operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (create) Authenticated user can create their own profile.
     * @allow (get, update, delete) Authenticated user can only access their own profile.
     * @deny (create) Unauthenticated users cannot create profiles.
     * @deny (get, update, delete) Users cannot access other user's profiles.
     * @deny (list) Listing of user documents is disallowed.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to 1-on-1 chat session information.
     * @path /chats/{chatId}
     * @allow (get, list) Any participant in the chat can read the chat metadata.
     * @allow (create, update) Any participant can modify chat metadata (typing status, wallpaper).
     * @allow (delete) Any participant can delete the chat.
     * @deny Requests from unauthenticated users.
     * @principle Enforces shared access based on chat participation.
     */
    match /chats/{chatId} {
      function isParticipant(chatId) {
        return request.auth.uid in resource.data.participants;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && isParticipant(chatId);
      allow list: if false; // Listing chats is not allowed
      allow create: if isSignedIn() && request.resource.data.participants[request.auth.uid] == true;
      allow update: if isSignedIn() && isParticipant(chatId);
      allow delete: if isSignedIn() && isParticipant(chatId);
    }

    /**
     * @description Controls access to messages within a 1-on-1 chat session.
     * @path /chats/{chatId}/messages/{messageId}
     * @allow (get, list) Any participant in the chat can read messages.
     * @allow (create) Any participant in the chat can send messages.
     * @allow (update, delete) Any participant can update / delete messages (for maximum flexibility in this prototype).
     * @deny Requests from unauthenticated users.
     * @principle Enforces shared access based on chat participation.
     */
    match /chats/{chatId}/messages/{messageId} {
        function isParticipant(chatId) {
            return request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        }

        function isSignedIn() {
          return request.auth != null;
        }

        allow get: if isSignedIn() && isParticipant(chatId);
        allow list: if isSignedIn() && isParticipant(chatId);
        allow create: if isSignedIn() && isParticipant(chatId);
        allow update: if isSignedIn() && isParticipant(chatId);
        allow delete: if isSignedIn() && isParticipant(chatId);
    }

    /**
     * @description Controls access to contact information for a user.
     * @path /users/{userId}/contacts/{contactId}
     * @allow (get, list, create, update, delete) Authenticated user can only manage their own contacts.
     * @deny Requests from unauthenticated users.
     * @deny Users cannot access other user's contacts.
     * @principle Enforces document ownership for user contacts.
     */
    match /users/{userId}/contacts/{contactId} {
        function isOwner(userId) {
            return request.auth.uid == userId;
        }

        function isSignedIn() {
          return request.auth != null;
        }

        allow get: if isSignedIn() && isOwner(userId);
        allow list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to group chat information.
     * @path /groups/{groupId}
     * @allow (get, list) Any participant can read group metadata.
     * @allow (create) Any authenticated user can create a group.
     * @allow (update) Only the group owner can update group metadata.
     * @allow (delete) Only the group owner can delete the group.
     * @deny Requests from unauthenticated users.
     * @principle Enforces shared access for reads, owner-only access for writes.
     */
    match /groups/{groupId} {
      function isParticipant(groupId) {
        return request.auth.uid in resource.data.participants;
      }

      function isOwner(groupId) {
        return request.auth.uid == resource.data.ownerId;
      }

        function isSignedIn() {
          return request.auth != null;
        }

      allow get: if isSignedIn() && isParticipant(groupId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && isOwner(groupId);
      allow delete: if isSignedIn() && isOwner(groupId);
    }

    /**
     * @description Controls access to messages within a group chat session.
     * @path /groups/{groupId}/messages/{messageId}
     * @allow (get, list) Any participant in the group can read messages.
     * @allow (create) Any participant in the group can send messages.
     * @allow (update, delete) Any participant can update / delete messages (for maximum flexibility in this prototype).
     * @deny Requests from unauthenticated users.
     * @principle Enforces shared access based on group participation.
     */
    match /groups/{groupId}/messages/{messageId} {
        function isParticipant(groupId) {
            return request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.participants;
        }

        function isSignedIn() {
          return request.auth != null;
        }

        allow get: if isSignedIn() && isParticipant(groupId);
        allow list: if isSignedIn() && isParticipant(groupId);
        allow create: if isSignedIn() && isParticipant(groupId);
        allow update: if isSignedIn() && isParticipant(groupId);
        allow delete: if isSignedIn() && isParticipant(groupId);
    }
  }
}