/**
 * @fileoverview Firestore Security Rules for Secure Talk application.
 *
 * Core Philosophy:
 * This ruleset prioritizes strong authorization by enforcing user-ownership and
 * shared-access patterns where appropriate. It avoids complex data validation to
 * allow for rapid prototyping and schema iteration.
 *
 * Data Structure:
 * - Users: Stored in `/users/{userId}`, accessible only to the owning user.
 * - Chats: Stored in `/chats/{chatId}`, accessible to participating users.
 * - Messages (1-on-1): Stored in `/chats/{chatId}/messages/{messageId}`, accessible to participating users.
 * - Contacts: Stored in `/users/{userId}/contacts/{contactId}`, accessible only to the owning user.
 * - Groups: Stored in `/groups/{groupId}`, accessible to group participants.
 * - Messages (Group): Stored in `/groups/{groupId}/messages/{messageId}`, accessible to group participants.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Strict ownership is enforced for user-related data (profile, contacts).
 * - Shared access is implemented for chats and groups based on participant lists.
 * - No data validation is performed beyond authorization checks, except for relational integrity checks
 *   to prevent orphaned or mis-linked data.
 *
 * Denormalization for Authorization:
 * - Chats and Groups denormalize user participation via a `participants` map directly on the document. This is used to
 *   determine read/write access for members.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles. Only the authenticated user can read/write their own profile.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user_abc' can create their profile if request.auth.uid == 'user_abc'.
     * @allow (get, list, update, delete) - User with UID 'user_abc' can read/write their profile.
     * @deny (create) - User with UID 'user_xyz' cannot create a profile with ID 'user_abc'.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure 1-on-1 chats. Only participants can read/write chat metadata.
     * @path /chats/{chatId}
     * @allow (get, list) - User with UID 'user_abc' can read chat if they are a participant.
     * @allow (create, update, delete) - User with UID 'user_abc' can create/update/delete chat if they are a participant.
     * @deny (get, list, create, update, delete) - User with UID 'user_xyz' cannot access chat if they are not a participant.
     * @principle Enforces shared access based on the 'participants' map.
     */
    match /chats/{chatId} {
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }

      function isCreatingParticipant() {
        return request.auth.uid in request.resource.data.participants;
      }

      allow get: if isParticipant();
      allow list: if false;
      allow create: if isCreatingParticipant();
      allow update: if isParticipant() && resource != null;
      allow delete: if isParticipant() && resource != null;

        /**
         * @description Secure messages within 1-on-1 chats. Only participants can read/write messages.
         * @path /chats/{chatId}/messages/{messageId}
         * @allow (get, list) - User with UID 'user_abc' can read message if they are a participant in the chat.
         * @allow (create) - User with UID 'user_abc' can create message if they are a participant in the chat.
         * @allow (update, delete) - User with UID 'user_abc' can update/delete message if they are a participant in the chat.
         * @deny (get, list, create, update, delete) - User with UID 'user_xyz' cannot access message if they are not a participant.
         * @principle Enforces shared access based on the 'participants' map in the parent chat.
         */
        match /messages/{messageId} {
            function isChatParticipant() {
                return get(/databases/$(database)/documents/chats/$(chatId)).data.participants[request.auth.uid] == true;
            }

            allow get: if isChatParticipant();
            allow list: if isChatParticipant();
            allow create: if isChatParticipant();
            allow update: if isChatParticipant() && resource != null;
            allow delete: if isChatParticipant() && resource != null;
        }
    }

    /**
     * @description Secure contacts. Only the user can read/write their own contacts.
     * @path /users/{userId}/contacts/{contactId}
     * @allow (create) - User with UID 'user_abc' can create a contact if the userId matches.
     * @allow (get, list, update, delete) - User with UID 'user_abc' can read/write their contacts.
     * @deny (create) - User with UID 'user_xyz' cannot create a contact for user 'user_abc'.
     * @principle Enforces document ownership for contacts.
     */
    match /users/{userId}/contacts/{contactId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure group chats. Only participants can read/write group metadata.
     * @path /groups/{groupId}
     * @allow (get, list) - User with UID 'user_abc' can read group if they are a participant.
     * @allow (create, update, delete) - User with UID 'user_abc' can create/update/delete group if they are a participant.
     * @deny (get, list, create, update, delete) - User with UID 'user_xyz' cannot access group if they are not a participant.
     * @principle Enforces shared access based on the 'participants' map.
     */
    match /groups/{groupId} {
      function isParticipant() {
        return request.auth.uid in resource.data.participants;
      }

      function isCreatingParticipant() {
        return request.auth.uid in request.resource.data.participants;
      }

      allow get: if isParticipant();
      allow list: if false;
      allow create: if isCreatingParticipant();
      allow update: if isParticipant() && resource != null;
      allow delete: if isParticipant() && resource != null;

        /**
         * @description Secure messages within group chats. Only participants can read/write messages.
         * @path /groups/{groupId}/messages/{messageId}
         * @allow (get, list) - User with UID 'user_abc' can read message if they are a participant in the group.
         * @allow (create) - User with UID 'user_abc' can create message if they are a participant in the group.
         * @allow (update, delete) - User with UID 'user_abc' can update/delete message if they are a participant in the group.
         * @deny (get, list, create, update, delete) - User with UID 'user_xyz' cannot access message if they are not a participant.
         * @principle Enforces shared access based on the 'participants' map in the parent group.
         */
        match /messages/{messageId} {
            function isGroupParticipant() {
                return get(/databases/$(database)/documents/groups/$(groupId)).data.participants[request.auth.uid] == true;
            }

            allow get: if isGroupParticipant();
            allow list: if isGroupParticipant();
            allow create: if isGroupParticipant();
            allow update: if isGroupParticipant() && resource != null;
            allow delete: if isGroupParticipant() && resource != null;
        }
    }
  }
}