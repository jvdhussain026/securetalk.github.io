rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (get, create, update, delete, list) if the user is the owner of the profile.
     *   e.g., (get) request.auth.uid == 'user123' where the path is /users/user123
     * @deny (get, list) if the user is not the owner of the profile.
     *   e.g., (get) request.auth.uid == 'user456' where the path is /users/user123
     * @principle Enforces document ownership for reads and writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Controls access to 1-on-1 chat session information.
     * @path /chats/{chatId}
     * @allow (get, create, update, delete, list) if the user is a participant in the chat.
     *   e.g., (get) request.auth.uid == 'user123' where the chat document contains 'participants': {'user123': true, 'user456': true}
     * @deny (get, list) if the user is not a participant in the chat.
     *   e.g., (get) request.auth.uid == 'user789' where the chat document contains 'participants': {'user123': true, 'user456': true}
     * @principle Enforces shared access based on the 'participants' map.
     */
    match /chats/{chatId} {
      function isParticipant() {
        return request.auth != null && request.resource.data.participants[request.auth.uid] == true;
      }
      function isExistingParticipant() {
        return request.auth != null && resource.data.participants[request.auth.uid] == true;
      }
      allow get: if isExistingParticipant();
      allow list: if false;
      allow create: if request.auth != null && request.resource.data.participants[request.auth.uid] == true;
      allow update: if isExistingParticipant();
      allow delete: if isExistingParticipant();
    }

    /**
     * @description Controls access to messages within a 1-on-1 chat session.
     * @path /chats/{chatId}/messages/{messageId}
     * @allow (get, create, update, delete, list) if the user is a participant in the chat.
     *   e.g., (create) request.auth.uid == 'user123' where the parent chat document contains 'participants': {'user123': true, 'user456': true}
     * @deny (get, list) if the user is not a participant in the chat.
     *   e.g., (get) request.auth.uid == 'user789' where the parent chat document contains 'participants': {'user123': true, 'user456': true}
     * @principle Enforces shared access based on the 'participants' map of the parent chat document.
     */
    match /chats/{chatId}/messages/{messageId} {
      function isChatParticipant(chatId) {
        return request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants[request.auth.uid] == true;
      }
      allow get: if isChatParticipant(chatId);
      allow list: if false;
      allow create: if isChatParticipant(chatId);
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to contact information for a user.
     * @path /users/{userId}/contacts/{contactId}
     * @allow (get, create, update, delete, list) if the user is the owner of the contact list.
     *   e.g., (get) request.auth.uid == 'user123' where the path is /users/user123/contacts/contact456
     * @deny (get, list) if the user is not the owner of the contact list.
     *   e.g., (get) request.auth.uid == 'user789' where the path is /users/user123/contacts/contact456
     * @principle Enforces document ownership for reads and writes.
     */
    match /users/{userId}/contacts/{contactId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Controls access to group chat information.
     * @path /groups/{groupId}
     * @allow (get, create, update, delete, list) if the user is a participant in the group.
     *   e.g., (get) request.auth.uid == 'user123' where the group document contains 'participants': {'user123': true, 'user456': true}
     * @deny (get, list) if the user is not a participant in the group.
     *   e.g., (get) request.auth.uid == 'user789' where the group document contains 'participants': {'user123': true, 'user456': true}
     * @principle Enforces shared access based on the 'participants' map.
     */
    match /groups/{groupId} {
      function isParticipant() {
        return request.auth != null && request.resource.data.participants[request.auth.uid] == true;
      }
      function isExistingParticipant() {
        return request.auth != null && resource.data.participants[request.auth.uid] == true;
      }
      allow get: if isExistingParticipant();
      allow list: if false;
      allow create: if request.auth != null && request.resource.data.participants[request.auth.uid] == true;
      allow update: if isExistingParticipant();
      allow delete: if isExistingParticipant();
    }

    /**
     * @description Controls access to messages within a group chat session.
     * @path /groups/{groupId}/messages/{messageId}
     * @allow (get, create, update, delete, list) if the user is a participant in the group.
     *   e.g., (create) request.auth.uid == 'user123' where the parent group document contains 'participants': {'user123': true, 'user456': true}
     * @deny (get, list) if the user is not a participant in the group.
     *   e.g., (get) request.auth.uid == 'user789' where the path is /groups/group123/messages/message456 and the group document contains 'participants': {'user123': true, 'user456': true}
     * @principle Enforces shared access based on the 'participants' map of the parent group document.
     */
    match /groups/{groupId}/messages/{messageId} {
      function isGroupParticipant(groupId) {
        return request.auth != null && get(/databases/$(database)/documents/groups/$(groupId)).data.participants[request.auth.uid] == true;
      }
      allow get: if isGroupParticipant(groupId);
      allow list: if false;
      allow create: if isGroupParticipant(groupId);
      allow update: if false;
      allow delete: if false;
    }
  }
}